<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">
    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:id="@+id/imv_thumbnail"
        android:src="@drawable/logo_book_default"/>
    <TextView
        android:id="@+id/tv_discount"
        android:layout_alignTop="@+id/imv_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/bg_discount_green"
        android:padding="4dp"
        android:text="0 %"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="15sp"/>
    <TextView
        android:layout_alignTop="@+id/imv_thumbnail"
        android:layout_toRightOf="@id/imv_thumbnail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sách"
        android:maxLines="4"
        android:textSize="20sp"
        android:id="@+id/tv_book_name"/>
    <TextView
        android:layout_below="@+id/tv_book_name"
        android:layout_alignLeft="@id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="69.096 VNĐ"
        android:textSize="20sp"
        android:textColor="#F44336"
        android:id="@+id/tv_book_price"/>

</RelativeLayout>